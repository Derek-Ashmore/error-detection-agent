{
  "name": "error-detection-agent",
  "version": "0.1.0",
  "description": "AI-powered code error detection and self-healing system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --testPathIgnorePatterns=/integration/",
    "test:watch": "jest --watch --testPathIgnorePatterns=/integration/",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=/integration/",
    "test:verbose": "jest --verbose --testPathIgnorePatterns=/integration/",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --testPathIgnorePatterns=/integration/",
    "test:integration": "TEST_TYPE=integration jest --testMatch='**/integration/**/*.test.ts' --runInBand",
    "test:integration:ci": "TEST_TYPE=integration jest --testMatch='**/integration/**/*.test.ts' --runInBand --ci --coverage",
    "test:all": "npm run test && npm run test:integration",
    "test:coverage:merge": "mkdir -p coverage/merged && node -e \"const {createCoverageMap} = require('istanbul-lib-coverage'); const {createReporter} = require('istanbul-api'); const fs = require('fs'); const unit = JSON.parse(fs.readFileSync('coverage/unit/coverage-final.json', 'utf8')); const integration = JSON.parse(fs.readFileSync('coverage/integration/coverage-final.json', 'utf8')); const map = createCoverageMap(); Object.values(unit).forEach(f => map.addFileCoverage(f)); Object.values(integration).forEach(f => map.addFileCoverage(f)); const reporter = createReporter(); reporter.addAll(['json', 'json-summary', 'lcov', 'text']); reporter.dir = 'coverage/merged'; reporter.write(map);\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "error-detection",
    "ai",
    "self-healing",
    "code-analysis"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@azure/monitor-query-logs": "^1.0.0",
    "@octokit/rest": "^21.0.2",
    "chokidar": "^5.0.0",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
